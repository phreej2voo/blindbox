{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"baseUrl": "./",
		"moduleResolution": "node",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	// Set the default
	"editor.formatOnSave": false,
	// Enable per-language
	"[javascript]": {
		"editor.formatOnSave": true
	}

}
